<h1>New Argument</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @argument do |f| %>
       <div class="form-group">
         <%= f.label :title%>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter argument title" %>
       </div>
       <div class="form-group">
         <%= f.label :tag_list%>
         <%= f.text_field :tag_list, class: 'form-control', placeholder: "Enter argument tags" %>
       </div>

       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>